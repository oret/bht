<!DOCTYPE html>
<meta charset="UTF-8">
<title>chat</title>
<script src="/socket.io/socket.io.js"></script>
<script src="/javascripts/libs/jquery/dist/jquery.js"></script>
<script>
$(document).ready(function() {
  var socket = io('mock');
  $('form').submit(function() {
    socket.emit('chat message', $('input').val());
    $('input').val('');
    return false;
  });
  socket.on('chat message', function(data) {
    $('div').prepend(data + '<br>');
  });
});
</script>
